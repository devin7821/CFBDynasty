<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:p4="http://xamarin.com/mono/android/designer"
    android:orientation="vertical"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearLayout1">
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/tableLayout1">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                p4:placeholder="true"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/user_image"/>
            <TextView
                p4:placeholder="true"
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                p4:placeholder="true"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/opp_image"/>
        </TableRow>
        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                p4:placeholder="true"
                android:id="@+id/user_name"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"/>
            <TextView
                android:text="Vs."
                p4:placeholder="true"
                android:id="@+id/textView5"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                p4:placeholder="true"
                android:id="@+id/opp_name"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"                
                android:textStyle="bold"/>
        </TableRow>
        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                p4:placeholder="true"
                android:id="@+id/user_score"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                p4:placeholder="true"
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                p4:placeholder="true"
                android:id="@+id/opp_score"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </TableRow>
        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:text="@string/simulate_button"
                p4:placeholder="true"
                android:id="@+id/simulate_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:text="@string/stats_button"
                p4:placeholder="true"
                android:id="@+id/stats_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:text="@string/continue_button"
                p4:placeholder="true"
                android:id="@+id/continue_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </TableRow>
    </TableLayout>

    <FrameLayout
        android:id="@+id/statsfragcontainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"/>
</LinearLayout>