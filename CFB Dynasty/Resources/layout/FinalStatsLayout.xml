<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:p4="http://xamarin.com/mono/android/designer"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <TextView
    android:text="@string/final_stats"
    android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/title"
      android:textSize="100px"
      android:gravity="center" />
  <TableLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/curTable">
    <TableRow
        android:id="@+id/curRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <TextView
          android:text="@string/record"
          p4:placeholder="true"
          android:id="@+id/curRecord"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="35px"/>
      <TextView
          p4:placeholder="true"
          android:id="@+id/curWin"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:textSize="35px"/>
      <TextView
          android:text="-"
          p4:placeholder="true"
          android:id="@+id/curDash"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:textSize="35px"/>
      <TextView
          p4:placeholder="true"
          android:id="@+id/curLoss"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:textSize="35px"/>
      <TextView
          android:text="-"
          p4:placeholder="true"
          android:id="@+id/curDash2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:textSize="35px"/>
      <TextView
          p4:placeholder="true"
          android:id="@+id/curTie"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:textSize="35px"/>

    </TableRow>
    <TableRow
        android:id="@+id/curRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <TextView
          android:text="@string/score_differential"
          p4:placeholder="true"
          android:id="@+id/curScore"
          android:layout_width="200dp"
          android:layout_height="wrap_content"
          android:textSize="35px"/>
      <TextView
          p4:placeholder="true"
          android:id="@+id/curUserScore"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:textSize="35px"/>
      <TextView
          android:text="-"
          p4:placeholder="true"
          android:id="@+id/curScoreDash"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:textSize="35px"/>
      <TextView
          p4:placeholder="true"
          android:id="@+id/curOppScore"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:textSize="35px"/>
    </TableRow>
  </TableLayout>
  <Button
        android:text="@string/continue_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/finalstats_continue"/>
</LinearLayout>
