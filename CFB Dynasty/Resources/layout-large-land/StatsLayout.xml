<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:p4="http://xamarin.com/mono/android/designer"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <TextView
      android:text="@string/stats_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/title"
      android:textSize="100px"
      android:layout_gravity="center" />
  <TextView
      android:text="@string/currentseason_stats"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:textStyle="bold"
      android:textSize="40px"
      android:id="@+id/header1" />
  <TableLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:id="@+id/curTable">
    <TableRow
        android:id="@+id/curRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <TextView
          android:text="@string/record"
          p4:placeholder="true"
          android:id="@+id/curRecord"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="30px"/>
      <TextView
          p4:placeholder="true"
          android:id="@+id/curWin"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:textSize="30px"/>
      <TextView
          android:text="-"
          p4:placeholder="true"
          android:id="@+id/curDash"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:textSize="30px"/>
      <TextView
          p4:placeholder="true"
          android:id="@+id/curLoss"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:textSize="30px"/>
      <TextView
          android:text="-"
          p4:placeholder="true"
          android:id="@+id/curDash2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:textSize="30px"/>
      <TextView
          p4:placeholder="true"
          android:id="@+id/curTie"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:textSize="30px"/>

    </TableRow>
    <TableRow
        android:id="@+id/curRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <TextView
          android:text="@string/score_differential"
          p4:placeholder="true"
          android:id="@+id/curScore"
          android:layout_width="250dp"
          android:layout_height="wrap_content"
          android:textSize="30px"/>
      <TextView
          p4:placeholder="true"
          android:id="@+id/curUserScore"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:textSize="30px"/>
      <TextView
          android:text="-"
          p4:placeholder="true"
          android:id="@+id/curScoreDash"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:textSize="30px"/>
      <TextView
          p4:placeholder="true"
          android:id="@+id/curOppScore"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:textSize="30px"/>
    </TableRow>
  </TableLayout>
  <TextView
      android:text="@string/alltime_stats"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:textSize="40px"
      android:textStyle="bold"
      android:id="@+id/header2" />
  <TableLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:id="@+id/tableLayout2">
    <TableRow
        android:id="@+id/alltimeRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <TextView
          android:text="@string/record"
          p4:placeholder="true"
          android:id="@+id/alltimeRecord"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="30px"/>
      <TextView
          p4:placeholder="true"
          android:id="@+id/alltimeWin"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:textSize="30px"/>
      <TextView
          android:text="-"
          p4:placeholder="true"
          android:id="@+id/alltimeDash"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:textSize="30px"/>
      <TextView
          p4:placeholder="true"
          android:id="@+id/alltimeLoss"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:textSize="30px"/>
      <TextView
          android:text="-"
          p4:placeholder="true"
          android:id="@+id/alltimeDash2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:textSize="30px"/>
      <TextView
          p4:placeholder="true"
          android:id="@+id/alltimeTie"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:textSize="30px"/>
    </TableRow>
    <TableRow
        android:id="@+id/alltimeRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <TextView
          android:text="@string/score_differential"
          p4:placeholder="true"
          android:id="@+id/alltimeScore"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="30px"/>
      <TextView
          p4:placeholder="true"
          android:id="@+id/alltimeUserScore"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:textSize="30px"/>
      <TextView
          android:text="-"
          p4:placeholder="true"
          android:id="@+id/alltimeScoreDash"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:textSize="30px"/>
      <TextView
          p4:placeholder="true"
          android:id="@+id/alltimeOppScore"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:textSize="30px"/>
    </TableRow>
    <TableRow
        android:id="@+id/alltimeRow3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <TextView
          android:text="@string/championships"
          p4:placeholder="true"
          android:id="@+id/textView21"
          android:layout_width="250dp"
          android:layout_height="wrap_content"
          android:textSize="30px"/>
      <TextView
          p4:placeholder="true"
          android:id="@+id/championships"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:textSize="30px"/>
    </TableRow>
  </TableLayout>

</LinearLayout>